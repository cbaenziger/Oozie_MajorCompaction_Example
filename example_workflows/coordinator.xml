<coordinator-app name="compaction-coord" frequency="${coord:days(1)}"
                 start="2019-05-22T00:00Z" end="2099-01-01T00:00Z"
                 timezone="America/New_York"
                 xmlns="uri:oozie:coordinator:0.5">
  <parameters>
          <property>
              <name>workflowRoot</name>
          </property>
          <property>
              <name>nameNode</name>
          </property>
          <property>
              <name>jobTracker</name>
          </property>
          <property>
              <name>queueName</name>
              <value>default</value>
          </property>
          <property>
              <name>zkQuorum</name>
          </property>
          <property>
              <name>realm</name>
          </property>
          <property>
              <name>tableName</name>
          </property>
  </parameters>
  <controls>
    <concurrency>1</concurrency>
    <execution>LAST_ONLY</execution>
  </controls>
  <action>
        <workflow>
          <app-path>${workflowRoot}/workflow.xml</app-path>
          <configuration>
            <property>
              <name>nameNode</name>
              <value>${nameNode}</value>
            </property>
            <property>
              <name>jobTracker</name>
              <value>${jobTracker}</value>
            </property>
            <property>
              <name>queueName</name>
              <value>${queueName}</value>
            </property>
            <property>
              <name>zkQuorum</name>
              <value>${zkQuorum}</value>
            </property>
            <property>
              <name>realm</name>
              <value>${realm}</value>
            </property>
            <property>
              <name>tableName</name>
              <value>${tableName}</value>
            </property>
          </configuration>
        </workflow>
    </action>
</coordinator-app>
